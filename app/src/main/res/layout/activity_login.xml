<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sefa.aninterface.LoginActivity"
    android:background="@color/white">

    -


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_height="170dp"
            android:layout_width="match_parent"
            android:id="@+id/imageView_logo"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/logo"
            android:layout_marginTop="8dp" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/editText_TC"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:hint="T.C. Kimlik No"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:textColorLink="@color/gray"
            android:textColorHighlight="@color/gray"
            android:textColorHint="@color/gray"
            android:inputType="number"
            android:maxLength="11" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/editText_Sifre"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:hint="Şifre"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:textColorLink="@color/black"
            android:textColorHighlight="@color/gray"
            android:textColorHint="@color/gray"
            android:inputType="textPassword" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/textView_sUnuttum"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textAlignment="textEnd"
            android:text="Şifremi Unuttum"
            android:textColor="@color/black" />

        <Button
            android:layout_height="55dp"
            android:layout_width="match_parent"
            android:id="@+id/button_giris"
            android:layout_marginBottom="24dp"
            android:textColor="@color/white"
            android:layout_marginTop="24dp"
            android:text="Sisteme Giriş Yap"
            android:textStyle="normal|bold"
            android:textSize="15sp"
            android:elevation="8dp"
            android:background="@color/colorPrimaryDark" />

    </LinearLayout>

</RelativeLayout>
