<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_new_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sefa.aninterface.NewPassword">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar_new_password"
            app:title="Yeni Şifre Oluşturma"
            app:titleTextColor="@color/white"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText_yenile_sifre"
                android:hint="Yeni Şifre*"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/gray"
                android:textColorHint="@color/gray"
                android:textColorLink="@color/gray"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText_yenile_sifre_dogrula"
                android:hint="Yeni Şifre Doğrula*"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/gray"
                android:textColorHint="@color/gray"
                android:textColorLink="@color/gray"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp">

                <Button
                    android:text="İptal"
                    android:layout_height="40dp"
                    android:id="@+id/button_yenile_iptal"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:background="@color/buttonGray"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:elevation="8dp"
                    android:layout_width="100dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="Onayla"
                    android:layout_height="40dp"
                    android:id="@+id/button_yenile_onayla"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:elevation="8dp"
                    android:layout_width="100dp"
                    android:textSize="15sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
